<% show_post ||= false %>
<div class='row'>
  <div class='span0 well text-center'>
    <% if logged_in? %>
      <%= link_to vote_post_comment_path(comment.post, comment, up_vote?: true), method: 'post' do %>
        <i class='icon-arrow-up'></i>
      <% end %>
      <br/>
    <% end %>
    <%= comment.total_votes %> votes
    <% if logged_in? %>
      <br/>
      <%= link_to vote_post_comment_path(comment.post, comment, up_vote?: false), method: 'post' do %>
        <i class='icon-arrow-down'></i>
      <% end %>
    <% end %>
  </div>

  <div class="well span7">
    <p><em>"<%= comment.body %>"</em></p>
    <span class="quiet">comment by </span><%= link_to comment.creator.username.titleize, user_path(comment.creator) %>
    <small> at <%= display_datetime(comment.created_at) %> </small> 
    <% if show_post %>
      <br/>
      <br/>
      <p> Commented from: <%= link_to comment.post.title.titleize, post_path(comment.post) %></p>
    <% end %>
  </div>
</div>